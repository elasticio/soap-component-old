{
  "title": "SOAP component",
  "description": "Generic SOAP / WebServices integration component",
  "credentials": {
    "fields": {
      "wsdlURI": {
        "label": "WSDL URI",
        "required": true,
        "viewClass": "TextFieldWithNoteView",
        "placeholder": "http://www.webservicex.net/CreditCard.asmx?wsdl",
        "note": "Please specify a full URI of your WSDL, it should also be accessible from the internet."
      },
      "auth": {
        "required": false,
        "viewClass": "HTTPAuthView"
      }
    },
    "oauth2" : {
      "client_id" : "{{clientId}}",
      "client_secret" : "{{clientSecret}}",
      "auth_uri" : "{{authUri}}",
      "token_uri" : "{{tokenUri}}"
    }
  },
  "actions": {
    "call": {
      "title": "Call",
      "main": "./lib/actions/call.js",
      "fields": {
        "service": {
          "viewClass": "SelectView",
          "label": "Service",
          "required": true,
          "model": "getServices",
          "prompt": "Chose an Service",
          "order": 2
        },
        "operation": {
          "viewClass": "SelectView",
          "label": "Operation",
          "required": true,
          "model": "getOperations",
          "prompt": "Chose an Operation",
          "require": ["service"],
          "order": 1
        }
      },
      "metadata" : {
        "in": {
          "type": "object",
          "required": true,
          "properties": {
            "request": {
              "type": "object",
              "required": true
            }
          }
        },
        "out" : {}
      }
    }
  }
}
